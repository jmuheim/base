.images
  = accordion :images, item_options: {title_tag: "h#{heading_level ||= 2}", panel_class: 'panel-warning'} do |accordion|
    = accordion.card do |card|
      = card.title do
        = Image.model_name.human count: :other
        =< "(#{images.size})"

      = card.body do
        table.table.table-striped.table-hover.diff
          thead
            tr
              th = Image.model_name.human
              th = Image.human_attribute_name :identifier
              th = Image.human_attribute_name :creator
              th = Image.human_attribute_name :created_at
              th = Image.human_attribute_name :updated_at

          tbody
            - images.each do |image|
              == render 'images/image', image: image
